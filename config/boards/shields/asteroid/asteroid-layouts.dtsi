#include <physical_layouts.dtsi>

/ {
    asteroid_layout: asteroid_layout {
        compatible = "zmk,physical-layout";
        display-name = "Asteroid";

        keys  //                     w   h    x    y     rot    rx    ry
            // Left side - Row 1 (numbers)
            = <&key_physical_attrs 100 100    0    0       0     0     0>  // Empty
            , <&key_physical_attrs 100 100  100    0       0     0     0>  // 1
            , <&key_physical_attrs 100 100  200    0       0     0     0>  // 2
            , <&key_physical_attrs 100 100  300    0       0     0     0>  // 3
            , <&key_physical_attrs 100 100  400    0       0     0     0>  // 4
            , <&key_physical_attrs 100 100  500    0       0     0     0>  // 5

            // Right side - Row 1 (numbers)
            , <&key_physical_attrs 100 100  700    0       0     0     0>  // 6
            , <&key_physical_attrs 100 100  800    0       0     0     0>  // 7
            , <&key_physical_attrs 100 100  900    0       0     0     0>  // 8
            , <&key_physical_attrs 100 100 1000    0       0     0     0>  // 9
            , <&key_physical_attrs 100 100 1100    0       0     0     0>  // 0
            , <&key_physical_attrs 100 100 1200    0       0     0     0>  // Empty

            // Left side - Row 2 (QWERTY top)
            , <&key_physical_attrs 100 100    0  100       0     0     0>  // TAB
            , <&key_physical_attrs 100 100  100  100       0     0     0>  // Q
            , <&key_physical_attrs 100 100  200  100       0     0     0>  // W
            , <&key_physical_attrs 100 100  300  100       0     0     0>  // E
            , <&key_physical_attrs 100 100  400  100       0     0     0>  // R
            , <&key_physical_attrs 100 100  500  100       0     0     0>  // T

            // Right side - Row 2 (QWERTY top)
            , <&key_physical_attrs 100 100  700  100       0     0     0>  // Y
            , <&key_physical_attrs 100 100  800  100       0     0     0>  // U
            , <&key_physical_attrs 100 100  900  100       0     0     0>  // I
            , <&key_physical_attrs 100 100 1000  100       0     0     0>  // O
            , <&key_physical_attrs 100 100 1100  100       0     0     0>  // P
            , <&key_physical_attrs 100 100 1200  100       0     0     0>  // BKSP

            // Left side - Row 3 (ASDF row)
            , <&key_physical_attrs 100 100    0  200       0     0     0>  // CAPS
            , <&key_physical_attrs 100 100  100  200       0     0     0>  // A
            , <&key_physical_attrs 100 100  200  200       0     0     0>  // S
            , <&key_physical_attrs 100 100  300  200       0     0     0>  // D
            , <&key_physical_attrs 100 100  400  200       0     0     0>  // F
            , <&key_physical_attrs 100 100  500  200       0     0     0>  // G

            // Right side - Row 3 (HJKL row)
            , <&key_physical_attrs 100 100  700  200       0     0     0>  // H
            , <&key_physical_attrs 100 100  800  200       0     0     0>  // J
            , <&key_physical_attrs 100 100  900  200       0     0     0>  // K
            , <&key_physical_attrs 100 100 1000  200       0     0     0>  // L
            , <&key_physical_attrs 100 100 1100  200       0     0     0>  // ;
            , <&key_physical_attrs 100 100 1200  200       0     0     0>  // \

            // Left side - Row 4 (ZXCV row)
            , <&key_physical_attrs 100 100    0  300       0     0     0>  // LSHIFT
            , <&key_physical_attrs 100 100  100  300       0     0     0>  // Z
            , <&key_physical_attrs 100 100  200  300       0     0     0>  // X
            , <&key_physical_attrs 100 100  300  300       0     0     0>  // C
            , <&key_physical_attrs 100 100  400  300       0     0     0>  // V
            , <&key_physical_attrs 100 100  500  300       0     0     0>  // B

            // Right side - Row 4 (NM row)
            , <&key_physical_attrs 100 100  700  300       0     0     0>  // N
            , <&key_physical_attrs 100 100  800  300       0     0     0>  // M
            , <&key_physical_attrs 100 100  900  300       0     0     0>  // ,
            , <&key_physical_attrs 100 100 1000  300       0     0     0>  // .
            , <&key_physical_attrs 100 100 1100  300       0     0     0>  // /
            , <&key_physical_attrs 100 100 1200  300       0     0     0>  // RSHIFT

            // Left side - Row 5 (bottom modifiers)
            , <&key_physical_attrs 100 100    0  400       0     0     0>  // Empty
            , <&key_physical_attrs 100 100  100  400       0     0     0>  // Empty
            , <&key_physical_attrs 100 100  200  400       0     0     0>  // ALT
            , <&key_physical_attrs 100 100  300  400       0     0     0>  // CTRL
            , <&key_physical_attrs 100 100  400  400       0     0     0>  // FN
            , <&key_physical_attrs 100 100  500  400       0     0     0>  // CMD

            // Right side - Row 5 (arrows)
            , <&key_physical_attrs 100 100  700  400       0     0     0>  // LEFT
            , <&key_physical_attrs 100 100  800  400       0     0     0>  // DOWN
            , <&key_physical_attrs 100 100  900  400       0     0     0>  // UP
            , <&key_physical_attrs 100 100 1000  400       0     0     0>  // RIGHT
            , <&key_physical_attrs 100 100 1100  400       0     0     0>  // Empty
            , <&key_physical_attrs 100 100 1200  400       0     0     0>  // Empty

            // Row 6 removed - not physically present on this keyboard build
            ;
    };
};
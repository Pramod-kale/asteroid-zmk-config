#include "asteroid.dtsi"

// Override the transform for standalone left keyboard
&default_transform {
    columns = <2>;
    rows = <2>;
    map = <
RC(0,0) RC(0,1)
RC(1,0) RC(1,1)
    >;
};

&kscan0 {
    row-gpios
        = <&gpio0 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   // P0.15
        , <&gpio0 13 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   // P0.13
        ;
    col-gpios
        = <&gpio0 24 GPIO_ACTIVE_HIGH>  // P0.24
        , <&gpio0 9 GPIO_ACTIVE_HIGH>   // P0.09
        ;
};
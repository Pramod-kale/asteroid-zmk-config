#include "asteroid.dtsi"

// Override the transform for standalone right keyboard
&default_transform {
    columns = <2>;
    rows = <2>;
    map = <
RC(0,0) RC(0,1)
RC(1,0) RC(1,1)
    >;
};

&kscan0 {
    row-gpios
        = <&gpio0 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   // P0.06
        , <&gpio0 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   // P0.08
        ;
    col-gpios
        = <&gpio0 20 GPIO_ACTIVE_HIGH>  // P0.20
        , <&gpio0 17 GPIO_ACTIVE_HIGH>  // P0.17
        ;
};